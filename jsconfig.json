{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "checkJs": true,
    "baseUrl": "./src",
    "paths": {
      "#*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.d.ts"
  ]
}